{
  "name": "eggcms",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:admin\"",
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:admin": "vite",
    "build": "bun run build:server && bun run build:admin",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "build:admin": "vite build",
    "start": "bun dist/server/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.983.0",
    "@hono/node-server": "^1.14.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "better-sqlite3": "^11.8.0",
    "drizzle-orm": "^0.39.0",
    "hono": "^4.7.0",
    "jose": "^6.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.2.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.30.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  }
}
